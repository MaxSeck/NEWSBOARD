
<div class="header-container">
  <div class="d-flex justify-content-center">
    <%= cl_image_tag @post.photo.key, width: 300, height: 300, crop: :fill, class:"me-3 rounded" %>
    <hr>
    <div class="text-start">
      <h1 style="color:#ff66c4"><%= @post.title %></h1>
      <h3>created at<%= @post.comments.created_at %></h3>
      <p style="color:black"><%= @post.content %></p>
      <br>
      <br>
      <br>
    </div>
  </div>
  <div class="mt-3">
    <h3>Comments</h3>
      <div class="cards">
        <% @post.comments.each do |comment| %>
          <div class="card-product">
            <div class="card-product-infos">
              <h3><%= comment.user_id %></h3>
              <p class= "text"><%= comment.content %></p>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>

